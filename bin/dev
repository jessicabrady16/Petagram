#!/usr/bin/env bash
set -euo pipefail

PROCFILE="${PROCFILE:-Procfile.dev}"

if command -v overmind >/dev/null 2>&1; then
  exec overmind start -f "$PROCFILE"
elif command -v foreman >/dev/null 2>&1; then
  exec foreman start -f "$PROCFILE"
else
  echo "Install a Procfile runner:"
  echo "  gem install foreman   # simplest"
  echo "or:"
  echo "  brew install overmind # if you use Homebrew on WSL"
  exit 1
fi
